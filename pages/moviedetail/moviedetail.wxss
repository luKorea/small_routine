/* pages/movieDetail/movieDetail.wxss */
.mdetail-container {
  display: flex;
  flex-direction: column;
}

.mdetail-container image {
  width:70%;
  height:700rpx;
  margin:50rpx auto;
}

.mdetail-name {
  font-size: 40rpx;
  text-align: center;
  font-weight: bold;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.mdetail-content {
  display: flex;
  flex-direction: column;
  margin-left:20%;
  margin-top: 30rpx;
  line-height: 50rpx;
  font-size: 26rpx;
}

button{
  width:70%;
  height:80rpx;
  background: #489381;
  line-height: 80rpx;
  color: #fff;
  font-size: 28rpx;
  margin-top: 20rpx;
}